@page
@model LoginModel

@{
    ViewData["Title"] = "Kho AGU - Đăng nhập";
    var message = TempData["ErrorMessage"] as string;
}


<form method="post">
    <h1 class="text-center fw-bold mb-4">Đăng nhập kho AGU</h1>
    @if (!String.IsNullOrEmpty(message))
    {
        <div class="alert alert-danger">
            @message
        </div>
    }
    <div class="form-group">
        <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Tên đăng nhập"
            autocomplete="username" aria-required="true" />
    </div>
    <div class="form-group">
        <input asp-for="Input.Password" class="form-control form-control-lg" type="password" placeholder="Mật khẩu"
            autocomplete="current-password" aria-required="true" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-primary btn-lg">Đăng nhập</button>
    </div>
    <div class="form-group">
        <a class="link-primary" id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
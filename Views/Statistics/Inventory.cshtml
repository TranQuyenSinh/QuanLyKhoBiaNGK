@model IEnumerable<QuanLyKhoBiaNGK.Models.Product>
@{
    ViewData["Title"] = "Thống kê tồn kho";
    ViewData["ActivePage"] = "inventory";

}
<h1>Danh Sách Hàng Sắp Hết</h1>

<table class="table table-hover table-bordered table-striped ">
    <thead class="bg-info text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (List<Product>)ViewData["ExhaustProducts"])
        {
            <tr class="clickable-row" data-href="@Url.Action("Details", "Products", new { Id = item.Id })">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InventoryLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inventory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
            </tr>
        }
    </tbody>
</table>


<h1>Danh Sách Hàng Hóa</h1>

<table class="table table-hover table-bordered table-striped ">
    <thead class="bg-info text-light">

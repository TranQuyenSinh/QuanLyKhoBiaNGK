@model QuanLyKhoBiaNGK.ViewModels.UserWithRoles
@{
    ViewData["Title"] = "Gán role";
}

<h4>Thiết lập quyền cho user: @Model.UserName</h4>

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div class="form-group mb-2">
                @Html.ListBoxFor(m => m.Roles, (IEnumerable<SelectListItem>)ViewBag.allRoles, new
                    {
                        id = "id-select-roles",
                        @class = "w-100"
                    })
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a class="btn btn-primary" asp-action="Index">Quay lại danh sách</a>
        </form>
    </div>
</div>


@section Scripts {

    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />

    <script>
        $("#id-select-roles").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}

@model QuanLyKhoBiaNGK.ViewModels.CreateUserVM
@{
    ViewData["Title"] = "Tạo tài khoản mới";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="CreateUser" method="post" class="form-horizontal" role="form">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mt-2">
                    <label asp-for="FullName" class="col-md-10 control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="UserName" class="col-md-10 control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Password" class="col-md-10 control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Roles" class="col-md-10 control-label"></label>
                    @Html.ListBoxFor(m => m.Roles, (IEnumerable<SelectListItem>)ViewBag.allRoles, new
                        {
                            id = "id-select-roles",
                            @class = "w-100"
                        })
                    <span asp-validation-for="Roles" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Tạo mới</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>



@section Scripts {

    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />

    <script>
        $("#id-select-roles").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}

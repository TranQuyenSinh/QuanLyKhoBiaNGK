@model IEnumerable<QuanLyKhoBiaNGK.Models.Product>

@{
    ViewData["Title"] = "Quản Lý Hàng Hóa";
}

<h1>Danh Sách Hàng Hóa</h1>

<p>
    <a asp-action="Create">Tạo Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Đơn vị tính
            </th>
            <th>
                Quy đổi
            </th>
            <th>
                Giá nhập
            </th>
            <th>
                Giá bán lẻ
            </th>
            <th>
                Giá bán sỉ
            </th>
            <th>
                Loại sản phẩm
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prices.FirstOrDefault().Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prices.FirstOrDefault().ConversionRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prices.FirstOrDefault().PurchasePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prices.FirstOrDefault().RetailPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prices.FirstOrDefault().WholesalePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

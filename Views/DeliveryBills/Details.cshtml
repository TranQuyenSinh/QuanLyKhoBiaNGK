@model QuanLyKhoBiaNGK.Models.DeliveryBill

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DeliveryBill</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">0
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
          <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
    <div class="col-md-8">
         <a asp-action="CreateDetail" asp-route-billId="@Model.Id" class="btn btn-success float-end mb-2">Thêm sản
                phẩm</a>
        <table class="table table-striped table-bordered text-center">
            <thead class="bg-primary text-white">
                <tr>
                    <th>STT</th>
                    <th>Sản phẩm</th>
                    <th>Đơn vị tính</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>0
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.DetailBill.Count == 0)
                {
                    <tr>
                        <td colspan="7" class="fw-bold">Đơn chưa có sản phẩm nào</td>
                    </tr>
                }
                else
                {
                    var i = 0;
                    foreach (var item in ViewBag.DetailBill)
                    {
                        <tr>
                            <td>@(++i)</td>
                            <td>@item.Product.Name</td>
                            <td>@item.Unit</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@item.Amount</td>
                            <td>
                                <a asp-action="DeleteDetail" asp-route-detailId="@item.Id"
                           asp-route-returnUrl="@ViewBag.returnUrl" class="btn btn-sm btn-danger">
                                    <i class="fas fa-times"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div>
